

<Clientes_tela>:
    BoxLayout:
        orientation:'vertical'
#---------------------------------------HEADER
        MDToolbar:
            title: 'Lista de Clientes'
            md_bg_color: app.theme_cls.primary_dark
            size_hint_y: None
            height: 150
            pos_hint: {'top':1}
            elevation: 11
            left_action_items: [["menu-left", lambda x: app.voltar_toolbar()]]
            right_action_items: [["account-search", lambda x: root.mostrar_popup()]]
#----------------------------------------CAIXA DE BUSCA
        BoxLayout:   
            size_hint_y: None
            height: self.minimum_height + 15
            MDTextField:
                id: buscar
                font_size: 40
                size_hint_x: 4
                hint_text: 'Pesquisar'
            MDIconButton:
                text: 'Buscar'
                on_release: root.apagar_texto() 
                icon: 'backspace' 
#---------------------------------------LISTA DE CLIENTES
        ScrollView:   
            id: scroll
            BoxLayout:
                id: box_scroll
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height



<Cliente>:
    size_hint_y: None
    height: 150
    padding: [0,0,0,0]
    MDLabel:
        id: codigo
        halign: 'center'
        valign: 'bottom'
        size_hint_x: 1
        color: app.theme_cls.primary_dark
    MDLabel:
        id: nome_fantasia
        halign: 'center'
        color: app.theme_cls.primary_dark
        size_hint_x: 4
    MDLabel:
        id: bairro
        halign: 'center'
        color: app.theme_cls.primary_dark
        size_hint_x: 2
    MDIconButton:
        size_hint_x: 2
        icon: 'information-outline'
        pos_hint: {'center_y':0.5}
        size_hint_x: 1
        on_release: 
            root.ir_para_infos(root)
            app.root.transition.direction = 'left'

