<Clientes>:
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            BoxLayout:
                id: box
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height 
        BoxLayout:
            size_hint_y: None
            height: 100
            TextInput:
                id: pesquisar
            Button:
                text:'Buscar'
                size_hint_x: None
                width: 100
                on_release: root.buscar()


