<Lembretes_tela>:
    BoxLayout:
        orientation:'vertical'
#---------------------------------------HEADER
        MDToolbar:
            title: 'Lembretes'
            md_bg_color: app.theme_cls.primary_dark
            size_hint_y: None
            height: 150
            pos_hint: {'top':1}
            elevation: 11
            left_action_items: [["menu-left", lambda x: app.voltar_toolbar()]]
            right_action_items: [["card-search", lambda x: root.mostrar_popup()]]
#----------------------------------------CAIXA DE BUSCA
        BoxLayout:
			orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
			BoxLayout:
            	size_hint_y: None
            	height: self.minimum_height + 15
            	MDTextField:
                	id: buscar
                	font_size: 40
                	size_hint_x: 4
                	hint_text: 'Pesquisar'
            	MDIconButton:
                	text: 'Buscar'
                	on_release: root.apagar_texto() 
                	icon: 'backspace'
			BoxLayout:
            	size_hint_y: None
            	height: self.minimum_height
				MDIconButton:
					icon: 'calendar'
                    on_release: root.abrir_popup_primeira_data()
                MDLabel:
                    id: data	
                    halign: 'center'
				MDIconButton:
					text: 'Escolher data'
					icon: 'backspace'	
                    on_release: root.apagar_data() 
#---------------------------------------LISTA DE CLIENTES
        ScrollView:
            id: scroll
            BoxLayout:
                id: box_scroll
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height

    MDFloatingActionButton:
        icon: 'plus'
        md_bg_color: app.theme_cls.primary_dark
        rotation_root_button: True
        pos_hint: {"center_x": .9, "center_y": .1}
        on_release: 
            app.root.transition.direction = 'left'
            root.ir_para_lembrete_tela()
 