<Visita_tela>:
    BoxLayout:
        orientation:'vertical'
#---------------------------------------HEADER
        MDToolbar:
            title: 'Visita'
            md_bg_color: app.theme_cls.primary_dark
            size_hint_y: None
            height: 150
            pos_hint: {'top':1}
            elevation: 11
            left_action_items: [["menu-left", lambda x: app.voltar_toolbar()]]
            right_action_items: [["content-save", lambda x: root.mostrar_popup()]]
        
#----------------------------------CONTEUDO DA VISITA
        ScrollView:
            BoxLayout:
                id: box_scroll
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                MDCard:
                    height: "600dp"
                    orientation: 'vertical'
                    padding: 8
                    size_hint_y: None
                    pos_hint:{'center_x':0.5,'center_y':0.5}
                    MDLabel:
                        text:' Data:'
                    BoxLayout:
                        size_hint_y: None
                        height: self.minimum_height
                        MDIconButton:
                            icon: 'calendar'
                            on_release: root.abrir_popup_primeira_data()
                        MDLabel:
                            id: data	
                            halign: 'center'
                        MDIconButton:
                            icon: 'backspace'	
                            on_release: root.apagar_data() 
                    BoxLayout:
                        MDLabelButton:
                            text: 'Cliente:'
                            size_hint_x: 1
                        MDTextField:
                            hint_text: 'Código'
                            size_hint_x: 1
                        MDTextField:
                            hint_text: 'Nome Fantasia'
                            size_hint_x: 2
                        MDIconButton:
                            icon: 'account-search-outline'	
                            on_release: 
                            pos_hint: {'center_y':0.5}
                    BoxLayout:
                        MDLabel:
                            text: 'Contato:'
                            size_hint_x: 1
                        MDTextField:
                            size_hint_x: 3
                    BoxLayout:
                        MDLabel:
                            text: " Visita:"
                            size_hint_x: 1
                        MDTextField:
                            size_hint_x: 3
                    MDLabel:
                        text: ' Informações:'
                    MDTextField:
                        multiline: True
                    MDSeparator:
                        height: "20dp"
                    MDLabel:
                        text: ' Lembrete:'
                    MDTextField:
                        multiline: True
                        lines: 3                    
                    MDLabel:
                        text: 'Para o dia:'
                        halign: 'left'
                    BoxLayout:
                        MDIconButton:
                            icon: 'calendar'
                            on_release: root.abrir_popup_primeira_data()
                        MDLabel:
                            id: data	
                            halign: 'center'
                        MDIconButton:
                            icon: 'backspace'	
                            on_release: root.apagar_data()
                
                MDLabel:
                    size_hint_y: None
                    height: 600
                
            
    


<MDLabelButton@ButtonBehavior+MDLabel>:
    halign: 'left'


    
            