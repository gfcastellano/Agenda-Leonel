

<Menu>:
#---------------------------------------HEADER
    MDToolbar:
        title: 'Menu'
        md_bg_color: app.theme_cls.primary_dark
        size_hint_y: None
        height: 150
        pos_hint: {'top':1}
        elevation: 11
    BoxLayout:
        orientation: 'horizontal'
        #margin: 120, 0, 0, 0
        #padding: 20,20,20,20
        #spacing: 50
        size_hint_y: 0.8
        BoxLayout:
            #padding: 40
            #spacing: 40
            orientation: 'vertical'
            BoxLayout:
                spacing:20,0
                BotoesDireita:
                    icon: 'folder-search'
                    on_release: 
                        app.root.transition.direction = 'left'
                        app.root.current = 'Busca_tela'
                MDRaisedButton:
                    text: 'Busca Avan√ßada'
                    pos_hint: {'center_y':0.5}
                    on_release: 
                        app.root.transition.direction = 'left'
                        app.root.current = 'Busca_tela'
            BoxLayout:
                spacing:20,0
                BotoesDireita:
                    icon: 'close-box-outline'
                    on_release: app.stop()
                MDRaisedButton:
                    text: 'Sair'
                    pos_hint: {'center_y':0.5}
                    on_release: app.stop()
            
        BoxLayout:
            #padding:20
            #spacing: 10
            orientation: 'vertical'
            BoxLayout:
                spacing:20,0
                BotoesDireita:
                    icon: 'map'
                    on_release: 
                        app.root.transition.direction = 'left'
                        app.root.current = 'Mapa_tela'
                MDRaisedButton:
                    text: 'Mapa'
                    pos_hint: {'center_y':0.5}
                    on_release: 
                        app.root.transition.direction = 'left'
                        app.root.current = 'Mapa_tela'
            BoxLayout:
                spacing:20,0
                BotoesDireita:
                    icon: 'notebook'
                    on_release: 
                        app.root.transition.direction = 'left'
                        app.root.current = 'Clientes_tela'
                MDRaisedButton:
                    text: 'Clientes'
                    pos_hint: {'center_y':0.5}
                    on_release: 
                        app.root.transition.direction = 'left'
                        app.root.current = 'Clientes_tela'
            BoxLayout:
                spacing:20,0
                BotoesDireita:
                    icon: 'reminder'
                    on_release: 
                        app.root.transition.direction = 'left'
                        app.root.current = 'Lembretes_tela'   
                MDRaisedButton:
                    text: 'Lembretes'
                    pos_hint: {'center_y':0.5}
                    on_release: 
                        app.root.transition.direction = 'left'
                        app.root.current = 'Lembretes_tela'   
            BoxLayout:
                spacing:20,0
                BotoesDireita:
                    icon: 'briefcase'
                    on_release: 
                        app.root.transition.direction = 'left'
                        app.root.current = 'Lembretes_tela'   
                MDRaisedButton:
                    text: 'Visitas'                    
                    pos_hint: {'center_y':0.5}
                    on_release: 
                        app.root.transition.direction = 'left'
                        app.root.current = 'Lembretes_tela'
            
        
