

<Busca_tela>:
    BoxLayout:
        orientation: 'vertical'
#---------------------------------------HEADER
        MDToolbar:
            title: 'Busca Avancada'
            md_bg_color: app.theme_cls.primary_dark
            size_hint_y: None
            height: 100
            pos_hint: {'top':1}
            elevation: 11
            left_action_items: [["menu-left", lambda x: root.voltar_toolbar()]]
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
#-------------------------------------------------CAIXAS
                BoxparaScroll:
                    MDLabel:
                        text: 'Codigo:'
                        size_hint_x: 0.5
                    MDTextField:
                        id: codigo
                    MDIconApagar:
                        on_release: root.apagar_texto('codigo')
                BoxparaScroll:
                    MDLabel:
                        text: 'Nome:'
                        size_hint_x: 0.5
                    MDTextField:
                        id: nome_fantasia
                    MDIconApagar:
                        on_release: root.apagar_texto('nome_fantasia') 
                BoxparaScroll:
                    MDLabel:
                        text: 'Endereco:'
                        size_hint_x: 0.5
                    MDTextField:
                        id: endereco
                    MDIconApagar:
                        on_release: root.apagar_texto('endereco') 
                BoxparaScroll:
                    MDLabel:
                        text: 'Bairro:'
                        size_hint_x: 0.5
                    MDTextField:
                        id: bairro
                    MDIconApagar:
                        on_release: root.apagar_texto('bairro') 
                BoxparaScroll:
                    MDLabel:
                        text: 'Telefone:'
                        size_hint_x: 0.5
                    MDTextField:
                        id: telefone
                    MDIconApagar:
                        on_release: root.apagar_texto('telefone') 
                BoxparaScroll:
                    MDLabel:
                        text: 'Contato:'
                        size_hint_x: 0.5
                    MDTextField:
                        id: contato
                    MDIconApagar:
                        on_release: root.apagar_texto('contato') 
                BoxparaScroll:
                    MDLabel:
                        text: 'Perfil:'
                        size_hint_x: 0.5
                    MDTextField:
                        id: perfil
                    MDIconApagar:
                        on_release: root.apagar_texto('perfil')
                BoxparaScroll:
                    MDLabel:
                        text: 'Banho:'
                        halign: 'center'
                    MDLabel:
                        text: 'Tosa:'
                        halign: 'center'
                    MDLabel:
                        text: 'Pet-Shop:'
                        halign: 'center'
                    MDLabel:
                        text: 'Clinica:'
                        halign: 'center'
                BoxparaScroll:
                    MDCheckbox:
                        id: banho
                    MDCheckbox:
                        id: tosa
                    MDCheckbox:
                        id: pet_shop
                    MDCheckbox:
                        id: clinica
                BoxparaScroll:
                    MDLabel:
                        text: 'Razao Social:'
                        size_hint_x: 0.5
                    MDTextField:
                        id: razao_social
                    MDIconApagar:
                        on_release: root.apagar_texto('razao_social') 
                BoxparaScroll:
                    MDLabel:
                        text: 'CNPJ:'
                        size_hint_x: 0.5
                    MDTextField:
                        id: cnpj
                    MDIconApagar:
                        on_release: root.apagar_texto('cnpj') 
                BoxparaScroll:
                    MDLabel:
                        text: 'CEP:'
                        size_hint_x: 0.5
                    MDTextField:
                        id: cep
                    MDIconApagar:
                        on_release: root.apagar_texto('cep')
                BoxparaScroll:
                    MDLabel:
                        text: 'Therapet:'
                        halign: 'center'
                    MDLabel:
                        text: 'Tesoura:'
                        halign: 'center'
                    MDLabel:
                        text: 'Tapetinho:'
                        halign: 'center'
                BoxparaScroll:
                    MDCheckbox:
                        id: therapet
                    MDCheckbox:
                        id: tesoura
                    MDCheckbox:
                        id: tap_higienico
#-------------------------------------------------------------BOT√ÉO DE BUSCA
        MDRaisedButton:
            text: 'Buscar'
            on_release: root.mostrar_popup()
            size_hint_x: 1
            size_hint_y: None
            height: 100



<BoxparaScroll@BoxLayout>:
    padding: [5,0,0,0]
    size_hint_y: None
    height: 120

<MDIconApagar@MDIconButton>:
    icon: 'backspace'