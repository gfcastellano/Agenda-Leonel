<Visitas_tela>:
    BoxLayout:
        orientation:'vertical'
#---------------------------------------HEADER
        MDToolbar:
            title: 'Visitas'
            md_bg_color: app.theme_cls.primary_dark
            size_hint_y: None
            height: 150
            pos_hint: {'top':1}
            elevation: 11
            left_action_items: [["menu-left", lambda x: app.voltar_toolbar()]]
            right_action_items: [["account-search", lambda x: root.mostrar_popup()]]
#----------------------------------------CAIXA DE BUSCA
        BoxLayout:  
			orientation: 'vertical'
            size_hint_y: None
            height: 270
			BoxLayout:
            	size_hint_y: None
            	height: 150
            	MDTextField:
                	id: buscar
                	font_size: 40
                	size_hint_x: 4
                	hint_text: 'Pesquisar'
            	MDIconButton:
                	text: 'Buscar'
                	on_release: root.apagar_texto() 
                	icon: 'backspace'
			BoxLayout:
            	size_hint_y: None
            	height: 120
				MDIconButton:
					icon: 'calendar'
                MDLabel:
                    id: data	
				MDIconButton:
					text: 'Escolher data'
					icon: 'backspace'	
#---------------------------------------LISTA DE CLIENTES
        ScrollView:   
            BoxLayout:
                id: box_scroll
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height



<Visita>:
    rows: 2
    size_hint_y: None
    height: self.minimum_height
    orientation: 'vertical'
    GridLayout:
        rows:1
        cols:3
        size_hint_y: None
    	MDLabel:
            id: data
            halign: 'center'
            valign: 'bottom'
            size_hint_x: 3
            color: app.theme_cls.primary_dark
	    MDLabel:
            id: codigo
            halign: 'center'
            valign: 'bottom'
            size_hint_x: 2
            color: app.theme_cls.primary_dark
        MDLabel:
            id: nome_fantasia
            halign: 'left'
            size_hint_x: 6
            color: app.theme_cls.primary_dark
	GridLayout:
        orientation: 'vertical'
        size_hint_y: None
        rows: 2
        cols: 2
        padding: [30,0,0,0]
        MDLabel:
            text: 'Contato:'
            size_hint_x: 0.6
            halign: 'center'
        MDLabel:
            text: 'Informacoes:'
        MDLabel:
            id: contato
            size_hint_x: 0.6
            halign: 'center'
            text_size: self.width, None
            size_hint: 1, None
            height: self.texture_size[1]
        MDLabel:
            id: informacoes
            #size_hint_y: None
            #height: self.texture_size[1] if self.ids.contato.height < self.texture_size[1] else self.ids.contato.height