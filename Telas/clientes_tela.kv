

<Clientes_tela>:
    BoxLayout:
        orientation:'vertical'
#---------------------------------------HEADER
        MDToolbar:
            title: 'Lista de Clientes'
            md_bg_color: app.theme_cls.primary_dark
            size_hint_y: None
            height: 100
            pos_hint: {'top':1}
            elevation: 11
            left_action_items: [["menu-left", lambda x: root.voltar_toolbar()]]
#----------------------------------------CAIXA DE BUSCA
        BoxLayout:   
            size_hint_y: None
            height: 100
            MDTextField:
                id: buscar
                font_size: 40
                size_hint_x: 4
            MDIconButton:
                text: 'Buscar'
                on_release: root.mostrar_popup()
                icon: 'account-search'
#---------------------------------------LISTA DE CLIENTES
        ScrollView:   
            BoxLayout:
                id: box_scroll
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height



<Cliente>:
    size_hint_y: None
    height: 100
    padding: [0,5,0,0]
    MDLabel:
        id: codigo
        halign: 'center'
        size_hint_x: 1
        color: app.theme_cls.primary_dark
    MDLabel:
        id: nome_fantasia
        halign: 'center'
        size_hint_x: 6
        color: app.theme_cls.primary_dark
    MDIconButton:
        size_hint_x: 2
        icon: 'information-outline'
        size: self.size
        on_release: 
            root.ir_para_infos(root)
            app.root.transition.direction = 'left'
    MDIconButton:
        size_hint_x: 2
        icon: 'point-of-sale'
        size: self.size
                

