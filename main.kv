
Gerenciador:
    Menu:
        name: 'Menu'
    Clientes:
        name: 'Clientes'
    Mapa:
        name: 'Mapa'
<Menu>:
    BoxLayout:
        orientation: 'vertical'
        padding: 200
        spacing: 50
        Button:
            text:'Lista de Clientes'
            on_release:app.root.current  = 'Clientes'
        Button:
            text:'Mapa'
            on_release:app.root.current = 'Mapa'
        Button:
            text:'Sair'
            on_release: app.stop()

