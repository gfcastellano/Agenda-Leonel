#:import MDApp kivymd
#:import Screen kivy.uix.screenmanager


<Clientes_tela>:
    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            size_hint_y: None
            height: 100
            TextInput:
                id: buscar
            Button:
                text: 'Buscar'
                on_release: root.adicionar_clientes()
        ScrollView:
            BoxLayout:
                id: box_scroll
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height



<Cliente>:
    size_hint_y: None
    height: 100
    padding: [0,5,0,0]
    MDLabel:
        id: codigo
        halign: 'center'
        size_hint_x: 1
    MDLabel:
        id: nome_fantasia
        halign: 'center'
        size_hint_x: 7
    Button:
        text: 'Infos'
        size_hint_x: 1
    Button:
        text: 'Vendas'
        size_hint_x: 1
                

