

<Menu>:
#---------------------------------------HEADER
    MDToolbar:
        title: 'Menu'
        md_bg_color: app.theme_cls.primary_dark
        size_hint_y: None
        height: 150
        pos_hint: {'top':1}
        elevation: 11
    BoxLayout:
        orientation: 'horizontal'
        margin: 120, 0, 0, 0
        padding: 50
        spacing: 50
        size_hint_y: 0.8
        BoxLayout:
            padding: 40
            orientation: 'vertical'
            BotaoMenu:
                text: 'Busca Avan√ßada por cliente'
                on_release: 
                    app.root.transition.direction = 'left'
                    app.root.current = 'Busca_tela'
            BotaoMenu:
                text: 'Adicionar Cliente'
                on_release: 
                    app.root.transition.direction = 'left'
                    app.root.current = 'Adicionar_cliente_tela'
            
            BotaoMenu:
                text: 'Sair'
                on_release: app.stop()
        BoxLayout:
            padding: 40
            orientation: 'vertical'
            BotaoMenu:
                text: 'Mapa'
                on_release: 
                    app.root.transition.direction = 'left'
                    app.root.current = 'Mapa_tela'
            BotaoMenu:
                text: 'Lista de Clientes'
                on_release: 
                    app.root.transition.direction = 'left'
                    app.root.current = 'Clientes_tela'
            BotaoMenu:
                text: 'Lista de Lembretes'
                on_release: 
                    app.root.transition.direction = 'left'
                    app.root.current = 'Lembretes_tela'        
            BotaoMenu:
                text: 'Lista de Visitas'
                on_release: 
                    app.root.transition.direction = 'left'
                    app.root.current = 'Visitas_tela'
        
