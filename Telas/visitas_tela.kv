<Visitas_tela>:
    BoxLayout:
        orientation:'vertical'
#---------------------------------------HEADER
        MDToolbar:
            title: 'Visitas'
            md_bg_color: app.theme_cls.primary_dark
            size_hint_y: None
            height: 150
            pos_hint: {'top':1}
            elevation: 11
            left_action_items: [["menu-left", lambda x: app.voltar_toolbar()]]
            right_action_items: [["account-search", lambda x: root.mostrar_popup()]]
#----------------------------------------CAIXA DE BUSCA
        BoxLayout:  
			orientation: 'vertical'
            size_hint_y: None
            height: 270
			BoxLayout:
            	size_hint_y: None
            	height: 150
            	MDTextField:
                	id: buscar
                	font_size: 40
                	size_hint_x: 4
                	hint_text: 'Pesquisar'
            	MDIconButton:
                	text: 'Buscar'
                	on_release: root.apagar_texto() 
                	icon: 'backspace'
			BoxLayout:
            	size_hint_y: None
            	height: 120
				MDIconButton:
					icon: 'calendar'
                    on_release: root.abrir_popup_data()
                MDLabel:
                    id: data	
                    halign: 'center'
				MDIconButton:
					text: 'Escolher data'
					icon: 'backspace'	
                    on_release: root.apagar_data() 
#---------------------------------------LISTA DE CLIENTES
        ScrollView:   
            BoxLayout:
                id: box_scroll
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height


<Visita>:
    size_hint_y: None
    height: self.minimum_height
    GridLayout:
        rows: 3
        cols: 2
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        padding: [30,0,0,0]
        GridLayout:
            rows:1
            cols:2
            size_hint_y: None
            size_hint_x: 5
            MDLabel:
                id: data
                halign: 'left'
                valign: 'bottom'
                size_hint_x: 3
                color: app.theme_cls.primary_dark
                bold: True
            MDLabel:
                id: codigo
                halign: 'center'
                valign: 'bottom'
                size_hint_x: 2
                color: app.theme_cls.primary_dark
                bold: True
        MDLabel:
            id: nome_fantasia
            halign: 'left'
            size_hint_x: 6
            color: app.theme_cls.primary_dark
            bold: True
        MDLabel:
            text: 'Contato:'
            size_hint_x: 0.4
            halign: 'left'
            size_hint_y: None
            bold: True
        MDLabel:
            text: 'Informacoes:'
            halign:'left'
            size_hint_y: None
            bold: True
        MDLabel:
            id: contato
            size_hint_x: 0.4
            size_hint_y: None
            halign: 'left'
            valign: 'middle'
        MDLabel:
            id: informacoes
            halign:'left'
            size_hint_y: None