#:import MDApp kivymd
#:import Screen kivy.uix.screenmanager


<Clientes_tela>:
    BoxLayout:
        orientation:'vertical'
#---------------------------------------HEADER
        BoxLayout:   
            size_hint_y: None
            height: 100
            MDLabel:
                text: 'Lista de Clientes'
                halign: 'center'
                color: app.theme_cls.primary_dark
#----------------------------------------CAIXA DE BUSCA
        BoxLayout:   
            size_hint_y: None
            height: 100
            MDTextField:
                id: buscar
                font_size: 30
                size_hint_x: 4
            MDIconButton:
                text: 'Buscar'
                on_release: root.buscar()
                icon: 'account-search'
#---------------------------------------LISTA DE CLIENTES
        ScrollView:   
            BoxLayout:
                id: box_scroll
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height



<Cliente>:
    size_hint_y: None
    height: 100
    padding: [0,5,0,0]
    MDLabel:
        id: codigo
        halign: 'center'
        size_hint_x: 1
        color: app.theme_cls.primary_dark
    MDLabel:
        id: nome_fantasia
        halign: 'center'
        size_hint_x: 6
        color: app.theme_cls.primary_dark
    MDIconButton:
        text: 'Infos'
        size_hint_x: 2
        icon: 'information-outline'
        size: self.size
    MDIconButton:
        text: 'Vendas'
        size_hint_x: 2
        icon: 'point-of-sale'
        size: self.size
                

